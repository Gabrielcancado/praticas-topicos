#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    int x;
    int y= -1;
    int r;
    cout << "Insira um numero inteiro" << endl;
    cin >> x;
    while (y<0){
    cout << "insira um numero inteiro nao negativo" << endl;
    cin >> y;
    }
    r = pow(x,y);
    cout << "o primeiro numero elevado ao segundo resulta em " << r << endl;

    return 0;
}
